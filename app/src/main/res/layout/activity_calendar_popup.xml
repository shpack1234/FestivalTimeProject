<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <!-- 타이틀바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 닫기 버튼 -->
        <Button
            android:id="@+id/close_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="@string/dismiss_popup"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/main_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/add_day"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- 일정 추가 버튼 -->
        <Button
            android:id="@+id/add_finish_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:onClick="mOnClose"
            android:padding="16dp"
            android:text="@string/short_add"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>


    <!-- 일정 제목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cal_roundbox"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_Text"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="left|center"
                android:text="@string/title_kr"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/u_title_Text"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="3dp"
                android:background="#00000000"
                android:ems="30"
                android:gravity="right|center"
                android:hint="@string/input_title"
                android:inputType="textShortMessage"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- 일정 시간대 설정란 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="vertical"
            android:background="@drawable/ic_cal_roundbox">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="left|center"
                    android:text="@string/all_day"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Switch
                    android:id="@+id/switchView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right|center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:gravity="left|center"
                    android:text="@string/start"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/start_date"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:gravity="right|center"
                    android:text="@string/default_date"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/start_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#00ff0000"
                    android:gravity="right|center"
                    android:text="@string/default_time"
                    android:textSize="13sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/StartDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="vertical">

                <TimePicker
                    android:id="@+id/StartTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:timePickerMode="spinner"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:gravity="left|center"
                    android:text="@string/end"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/end_date"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00ff0000"
                    android:gravity="right|center"
                    android:text="@string/default_date"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/end_time"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#00ff0000"
                    android:gravity="right|center"
                    android:text="@string/default_time"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="vertical">

                <DatePicker
                    android:id="@+id/EndDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="right"
                android:orientation="vertical">

                <TimePicker
                    android:id="@+id/EndTimePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:timePickerMode="spinner"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/ic_cal_roundbox"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="left|center"
                android:text="@string/category"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Button
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00ff0000"
                android:gravity="right|center"
                android:text="@string/category"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:background="@drawable/ic_cal_roundbox"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:gravity="left|center"
                android:text="@string/alert"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <Switch
                android:id="@+id/alert_switch"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right|center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>