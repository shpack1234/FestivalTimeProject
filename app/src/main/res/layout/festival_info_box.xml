<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignTop="@id/linearLayout2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@id/linearLayout2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/festival_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="진행여부"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/festival_title"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="찜 개수"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="193dp"
        android:layout_height="71dp"
        android:layout_below="@id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/linearLayout2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/festival_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="위치" />

        <TextView
            android:id="@+id/festival_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="id"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="120dp"
        android:layout_height="103dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/festival_rep_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/radius_corner"
            android:contentDescription="festival image"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="103dp"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/linearLayout3"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:contentDescription="Delete button"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/festival_addButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:contentDescription="plus button"
            android:src="@drawable/plus" />

    </LinearLayout>
</RelativeLayout>
