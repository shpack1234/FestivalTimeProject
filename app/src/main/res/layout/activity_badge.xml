<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/holding_badge"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="62dp"
        android:background="@color/gray"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="33dp"
        android:orientation= "horizontal"
        android:columnCount="3"
        android:rowCount="3">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/image01" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/image02"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/image03"/>
        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image01"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image02"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image03"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"/>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_gravity="center"/>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="0"/>

    </GridLayout>


    <TextView
        android:id="@+id/total_having"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="780dp"
        android:text="@string/total_having_badge"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <TextView
        android:layout_alignBaseline="@id/total_having"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="780dp"
        android:layout_marginStart="175dp"
        android:text="@string/count"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nevigation_background"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/black"/>

</RelativeLayout>