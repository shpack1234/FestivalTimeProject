<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/my_page"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/before_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_back_before"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:onClick="customOnClick"
        android:background="@android:color/transparent"
        tools:ignore="SpeakableTextPresentCheck"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="35dp"
        android:orientation= "horizontal"
        android:columnCount="3"
        android:rowCount="3">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/image01" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/image02"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/image03"/>
        </com.google.android.material.card.MaterialCardView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image01"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image02"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_image03"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"/>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginStart="18dp"
            android:layout_gravity="center"/>



        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="500dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/black"
            android:layout_marginTop="18dp">
            <ImageView
                android:layout_width="97dp"
                android:layout_height="97dp"
                android:src="@drawable/ic_image"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_column="0"/>

    </GridLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_nevigation_background"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/black"/>

</RelativeLayout>