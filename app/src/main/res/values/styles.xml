<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/open_pop</item>
        <item name="android:windowExitAnimation">@anim/close_pop</item>
    </style>

    <style name="custom_popup" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_style</item>
    </style>

    <style name="statusbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>